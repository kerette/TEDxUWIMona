@{
    ViewBag.Title = "Contact";
}
<div class="container" style="margin-top:15px">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                    <div class="form-group">
                        <label class="control-label">Have a question?</label>
                        <hr>
                        <label class="control-label" for="fname">First Name</label><br>
                        <input class="form-control" type="text" id="fname" name="firstname" placeholder="Your first name..">
                    </div>
                <div class="form-group">
                    <label class="control-label" for="lname">Last Name</label><br>
                    <input class="form-control" type="text" id="lname" name="lastname" placeholder="Your last name..">
                </div>
                <div class="form-group">
                    <label class="control-label" for="email">E-mail</label><br>
                    <input class="form-control" type="email" id="email" name="email" placeholder="Your e-mail address..">
                </div>
                <div class="form-group">
                    <label class="control-label" for="subject">Subject</label><br>
                    <textarea class="form-control" id="subject" name="subject" placeholder="Write something.." rows="10" cols="50"></textarea>
                </div>
                <button type="submit" class="btn btn-danger">Submit</button>
            }
        </div>
        <div class="col-md-6">
            <label class="control-label">Contact Details</label>
            <hr>
